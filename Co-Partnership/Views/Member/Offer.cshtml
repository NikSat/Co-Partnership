        <br />
        <label>Quantity : </label>
        <input asp-for="Quantity" min="1" oninput="quantityChanged(this.value)" onkeypress="return preventSubmit(event)" /> <label>@Model.Item.UnitType</label>
        <br />
        <label>Total : <span class="currency" id="TotalPrice">@(Model.Item.UnitPrice / 3 * Model.Quantity)</span></label>
        <br />*@
    <a class="btn btn-primary" asp-controller="Member" asp-action="Index">Go Back</a>
    <a class="btn btn-primary" asp-controller="Member" asp-action="OfferItems">Choose another Product</a>
    <input class="btn btn-primary" type="submit" value="Submit Offer" style="float:right;" />
</form>

@section Scripts {
    <script type="text/javascript" src="~/js/Offer.js"></script>
    <script type="text/javascript" src="~/js/currencyFormat.js"></script>
}
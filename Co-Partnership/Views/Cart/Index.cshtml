@model Co_Partnership.Models.Cart

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My cart</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Item.Name</td>
                <td class="text-center">x @item.Item.StockQuantity</td>
                <td class="text-right">0@*@(item.Item.UnitPrice * item.Item.StockQuantity)*@</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2" class="text-right">Total:</td>
            <td class="text-right">@Model.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>
@if (ViewBag.ReturnUrl != null)
{
    <div class="text-center">
        <a class="btn btn-primary" href="@ViewBag.ReturnUrl">Continue shopping</a>
        <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Checkout</a>
    </div>
}
